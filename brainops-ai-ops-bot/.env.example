# BrainOps AI Ops Bot - Environment Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# General Configuration
LOG_LEVEL=INFO
DEBUG_MODE=false
TIMEZONE=UTC

# ClickUp Configuration
CLICKUP_API_TOKEN=pk_your_token_here
CLICKUP_WORKSPACE_ID=your_workspace_id
CLICKUP_FOLDER_IDS={"roofing": "folder_id", "personal": "folder_id", "technical": "folder_id"}

# Notion Configuration
NOTION_API_TOKEN=ntn_your_token_here
NOTION_DATABASE_IDS={"master_dashboard": "db_id", "bid_template": "db_id", "knowledge_base": "db_id"}

# GitHub Configuration
GITHUB_TOKEN=github_pat_your_token_here
GITHUB_REPOS=["brainops/repo1", "brainops/repo2"]
GITHUB_OAUTH_CLIENT_ID=your_client_id
GITHUB_OAUTH_CLIENT_SECRET=your_client_secret

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_ALERT_CHANNEL=#critical-alerts
SLACK_INFO_CHANNEL=#ai-updates

# Airtable Configuration
AIRTABLE_API_KEY=patyr_your_key_here
AIRTABLE_BASE_IDS={"quotes": "base_id", "inventory": "base_id"}
AIRTABLE_CRM_API_KEY=patDm_your_key_here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJ_your_anon_key_here
SUPABASE_SERVICE_KEY=eyJ_your_service_key_here
SUPABASE_DB_PASSWORD=your_db_password
SUPABASE_DB_URL=postgresql://postgres:password@db.project.supabase.co:5432/postgres

# Stripe Configuration
STRIPE_API_KEY_LIVE=sk_live_your_key_here
STRIPE_API_KEY_TEST=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_your_key_here
STRIPE_PUBLISHABLE_KEY_TEST=pk_test_your_key_here

# Render Configuration
RENDER_API_KEY=rnd_your_api_key_here
RENDER_SERVICE_IDS={"api": "srv-id", "frontend": "srv-id"}

# Vercel Configuration
VERCEL_TOKEN=your_vercel_token_here
VERCEL_TEAM_ID=team_your_team_id
VERCEL_PROJECT_IDS=["project1", "project2"]

# Make.com Configuration
MAKE_API_KEY=your_make_api_key
MAKE_TEAM_ID=your_team_id
MAKE_WEBHOOKS={
  "claude_task": "https://hook.us2.make.com/your_webhook_id",
  "content_generator": "https://hook.us2.make.com/your_webhook_id",
  "estimate_logger": "https://hook.us2.make.com/your_webhook_id"
}

# Toggl Configuration
TOGGL_API_TOKEN=your_toggl_token
TOGGL_WORKSPACE_ID=your_workspace_id

# ConvertKit Configuration
CONVERTKIT_API_KEY=your_api_key
CONVERTKIT_API_SECRET=your_api_secret

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your_key_here
OPENAI_ORG_ID=org-your_org_id

# Anthropic (Claude) Configuration
CLAUDE_API_KEY=sk-ant-api03-your_key_here

# Google/Gemini Configuration
GEMINI_API_KEY=AIzaSy_your_key_here

# Tana Configuration
TANA_API_TOKEN=eyJ_your_token_here
TANA_WORKSPACE_ID=your_workspace_id

# Weather Services
WEATHERCRAFT_WEBHOOK=https://hook.us2.make.com/your_webhook_id
WEATHERCRAFT_LIST_ID=your_list_id

# Mapbox Configuration
MAPBOX_TOKEN=sk.eyJ1_your_token_here

# Email Configuration
RESEND_API_KEY=re_your_key_here
RESEND_FROM_ADDRESS=notifications@brainops.com
EMAIL_ALERT_RECIPIENTS=["ops@brainops.com", "alerts@brainops.com"]

# Sentry Configuration (Error Tracking)
SENTRY_DSN=https://your_key@sentry.io/project_id

# Security Configuration
FERNET_SECRET=your_fernet_key_here
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT=100

# Alert Configuration
ALERT_COOLDOWN_MINUTES=15
CRITICAL_ALERT_EMAILS=["critical@brainops.com"]
ERROR_THRESHOLD=5
RESPONSE_TIME_THRESHOLD_MS=5000

# Monitoring Configuration
HEALTH_CHECK_INTERVAL_SECONDS=300
METRIC_RETENTION_DAYS=30
LOG_RETENTION_DAYS=7

# Feature Flags
ENABLE_SLACK_ALERTS=true
ENABLE_EMAIL_ALERTS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_AUTO_DEPLOY=false
ENABLE_LOCAL_LLM=false

# Database Configuration (for storing metrics/logs)
DATABASE_URL=sqlite:///brainops_bot.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/brainops_bot